# .env template for the Ticket App
# Copy this file to .env and fill in the values

# MongoDB
MONGO_DATABASE=your_database_name
MONGO_URI=mongodb://your_mongodb_host:27017/your_database_name
MONGO_NS=your_database_name.your_collection_name

# Elasticsearch + Kibana + Monstache
ELASTIC_URI=http://your_elasticsearch_host:9200
KIBANA_USERNAME=your_kibana_username
KIBANA_PASSWORD=your_kibana_password
ELASTICSEARCH_USERNAME=your_elasticsearch_username
ELASTICSEARCH_PASSWORD=your_elasticsearch_password
XPACK_ENCRYPTED_SESSION_KEY=your_32_char_encrypted_session_key

SERVER_PORT=3000
